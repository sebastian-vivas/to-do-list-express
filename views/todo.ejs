<!DOCTYPE html>
  <html lang="en" dir="ltr">
    <head>
      <meta charset="utf-8">
      <title>To Do List</title>
      <link rel="stylesheet" href="css/style.css">
      <link href="https://fonts.googleapis.com/css?family=Permanent+Marker|Rock+Salt&display=swap" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Odibee+Sans&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="normalize.css">
      <link rel="stylesheet" href="font-awesome.min.css">
      <link rel="stylesheet" href="style.css">
    </head>
    <body>
      <section class="flexContainer">
        <section class="heading">
          <h1>TO DO</h1>
          <h2>OR NOT</h2>
          <h3>TO DO</h3>
        </section>
        <form id="listInput" action="/toDoList" method="post">
          <input name="task" id="listItem" type="text">
          <button  type="submit" id="addToList">TO DO.</button>
        </form>
        <section class="shownList">
          <ul id="addUl">
            <% for(var i=0; i<tasksArray.length; i++) {%>
              <li class="toDoList" style="color:<%= tasksArray[i].completed %>">
                <span><%= tasksArray[i].task %></span>
              </li>
            <% } %>
          </ul>
        </section>
        <button type="button" name="button" id="removeCompleted">not to do.</button>
        <button type="button" name="button" id="removeAll">This too shall pass.</button>
      </section>
      <script type="text/javascript" src="main.js"></script>
    </body>
  </html>
